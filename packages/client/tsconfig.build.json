{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "lib": ["es2017"],
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": "../"
  },
  "include": ["./**/*.ts"],
  "exclude": ["./**/*.spec.ts", "dist"],
  "files": ["./index.ts"]
}
