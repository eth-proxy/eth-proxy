{
  "name": "@eth-proxy/eth-proxy",
  "version": "0.0.0",
  "description": "monorepo for eth-proxy development",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lerna": "lerna",
    "prebuild": "npm run clean",
    "build": "lerna run build",
    "test": "lerna run test --stream",
    "typecheck": "lerna run typecheck",
    "clean": "rimraf packages/**/dist",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run clean",
    "bootstrap": "lerna bootstrap",
    "testrpc": "ganache-cli -l 8000000",
    "gen:integration": "ts-node ./packages/codegen --o=\"tests/contracts.ts\" --cDir=\"tests/schemas\"",
    "test:integration": "TS_NODE_PROJECT=./tests/tsconfig.json mocha --require tsconfig-paths/register --require ts-node/register  \"./tests/**/*.spec.ts\"",
    "delayed_integration": "sleep 5 && npm run test:integration",
    "integration": "npm-run-all -r -p testrpc delayed_integration",
    "test:watch": "npm test -- --watch",
    "precommit": "lint-staged",
    "format": "prettier --write \"**/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/ramda": "0.25.48",
    "@types/sinon": "7.0.5",
    "bignumber.js": "8.1.1",
    "chai": "^4.2.0",
    "ganache-cli": "6.2.5",
    "husky": "1.3.1",
    "lerna": "^3.11.0",
    "lint-staged": "8.1.3",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "1.1.2",
    "rollup-plugin-typescript2": "0.19.2",
    "rxjs": "^6.4.0",
    "rxjs-marbles": "5.0.0",
    "sinon": "7.2.3",
    "ts-node": "^8.0.2",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.12.1",
    "typescript": "3.3.3",
    "web3": "0.20.7",
    "tslint-config-prettier": "^1.18.0",
    "@zerollup/ts-transform-paths": "1.7.0"
  }
}
