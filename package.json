{
	"name": "@eth-proxy/platform",
	"version": "0.0.0",
	"description": "monorepo for eth-proxy development",
	"private": true,
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"test": "./node_modules/.bin/mocha --require tsconfig-paths/register --require ts-node/register  \"./packages/**/*.spec.ts\" --watch-extensions ts",
		"test:watch": "npm test -- --watch",
		"precommit": "lint-staged",
		"format": "prettier --write \"**/**/*.ts\""
	},
	"lint-staged": {
		"*.{ts,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"singleQuote": true
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@types/chai": "^4.0.10",
		"@types/mocha": "^2.2.45",
		"@types/ramda": "0.25.12",
		"@types/sinon": "4.1.2",
		"chai": "^4.1.2",
		"lerna": "^2.5.1",
		"mocha": "^4.1.0",
		"rimraf": "^2.6.2",
		"ts-node": "^6.1.2",
		"tslint": "5.10.0",
		"typescript": "~2.8.3",
		"sinon": "4.1.3",
		"tsconfig-paths": "2.6.0",
		"prettier": "1.13.5",
		"lint-staged": "7.2.0",
		"husky": "0.14.3",
		"bignumber.js": "6.0.0",
		"web3": "^0.20.6"
	}
}
