{
	"name": "@eth-proxy/platform",
	"version": "0.0.0",
	"description": "monorepo for eth-proxy development",
	"private": true,
	"scripts": {
		"lerna": "lerna",
		"prebuild": "lerna exec -- npm run clean",
		"build": " lerna exec -- npm run build",
		"bootstrap": "lerna bootstrap",
		"testrpc": "ganache-cli -l 8000000",
		"test": "./node_modules/.bin/mocha --require tsconfig-paths/register --require ts-node/register  \"./packages/**/*.spec.ts\" --watch-extensions ts",
		"gen:integration": "ts-node ./packages/codegen --o=\"tests/contracts.ts\" --cDir=\"tests/schemas\"",
		"test:integration": "./node_modules/.bin/mocha --require tsconfig-paths/register --require ts-node/register  \"./tests/**/*.spec.ts\"",
		"delayed_integration": "sleep 5 && npm run test:integration",
		"integration": "npm-run-all -r -p testrpc delayed_integration",
		"test:watch": "npm test -- --watch",
		"precommit": "lint-staged",
		"format": "prettier --write \"**/**/*.ts\""
	},
	"lint-staged": {
		"*.{ts,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"singleQuote": true
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@types/chai": "^4.1.4",
		"@types/mocha": "^5.2.5",
		"@types/ramda": "0.25.34",
		"@types/sinon": "5.0.1",
		"chai": "^4.1.2",
		"lerna": "^2.11.0",
		"mocha": "^5.2.0",
		"rimraf": "^2.6.2",
		"ts-node": "^7.0.0",
		"tslint": "5.11.0",
		"typescript": "~3.0.1",
		"sinon": "6.1.4",
		"tsconfig-paths": "3.5.0",
		"prettier": "1.14.0",
		"lint-staged": "7.2.0",
		"husky": "0.14.3",
		"bignumber.js": "6.0.0",
		"web3": "^0.20.6",
		"rxjs": "^6.2.2",
		"ganache-cli": "^6.1.8",
		"npm-run-all": "^4.1.3",
		"rollup": "0.66.4",
		"rollup-plugin-typescript2": "0.17.1",
		"rxjs-marbles": "4.3.1"
	}
}
