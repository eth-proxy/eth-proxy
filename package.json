{
	"name": "@eth-proxy/platform",
	"version": "0.0.0",
	"description": "monorepo for eth-proxy development",
	"private": true,
	"scripts": {
		"bootstrap": "lerna bootstrap",
		"test": "./node_modules/.bin/mocha --require tsconfig-paths/register --require ts-node/register  \"./packages/**/*.spec.ts\" --watch-extensions ts",
		"test:watch": "npm test -- --watch",
		"precommit": "lint-staged",
		"format": "prettier --write \"**/**/*.ts\""
	},
	"lint-staged": {
    "*.{ts,md}": ["prettier --write", "git add"]
	},
	"prettier": {
    "singleQuote": true,
    "tab-width": 2
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@types/chai": "^4.0.10",
		"@types/mocha": "^2.2.44",
		"@types/ramda": "0.25.8",
		"@types/sinon": "4.1.2",
		"chai": "^4.1.2",
		"lerna": "^2.5.1",
		"mocha": "^4.0.1",
		"rimraf": "^2.6.2",
		"rxjs-marbles": "^2.2.0",
		"ts-node": "^4.0.2",
		"tslint": "5.8.0",
		"typescript": "2.6.2",
		"sinon": "4.1.3",
		"tsconfig-paths": "2.6.0",
		"prettier": "1.9.2",
		"lint-staged": "6.0.0",
		"husky": "0.14.3"
	}
}
