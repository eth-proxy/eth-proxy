{
  "name": "@eth-proxy/eth-proxy",
  "version": "0.0.0",
  "description": "monorepo for eth-proxy development",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lerna": "lerna",
    "prebuild": "lerna exec -- npm run clean",
    "build": " lerna exec -- npm run build",
    "bootstrap": "lerna bootstrap",
    "testrpc": "ganache-cli -l 8000000",
    "test": "./node_modules/.bin/mocha --require tsconfig-paths/register --require ts-node/register  \"./packages/**/*.spec.ts\" --watch-extensions ts",
    "gen:integration": "ts-node ./packages/codegen --o=\"tests/contracts.ts\" --cDir=\"tests/schemas\"",
    "test:integration": "./node_modules/.bin/mocha --require tsconfig-paths/register --require ts-node/register  \"./tests/**/*.spec.ts\"",
    "delayed_integration": "sleep 5 && npm run test:integration",
    "integration": "npm-run-all -r -p testrpc delayed_integration",
    "test:watch": "npm test -- --watch",
    "precommit": "lint-staged",
    "format": "prettier --write \"**/**/*.ts\""
  },
  "lint-staged": {
    "*.{ts,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/ramda": "0.25.34",
    "@types/sinon": "5.0.1",
    "bignumber.js": "6.0.0",
    "chai": "^4.1.2",
    "ganache-cli": "^6.1.8",
    "husky": "0.14.3",
    "lerna": "^3.4.3",
    "lint-staged": "7.2.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "1.15.2",
    "rimraf": "^2.6.2",
    "rollup": "0.67.1",
    "rollup-plugin-typescript2": "0.18.0",
    "rxjs": "^6.2.2",
    "rxjs-marbles": "4.3.1",
    "sinon": "6.1.4",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "3.5.0",
    "tslint": "5.11.0",
    "typescript": "~3.0.1",
    "web3": "^0.20.6"
  }
}
