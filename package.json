{
	"name": "@eth-proxy/platform",
	"version": "0.0.0",
	"description": "monorepo for eth-proxy development",
	"private": true,
	"scripts": {
		"lerna": "lerna",
		"compile": "lerna exec -- npm run compile",
		"bootstrap": "lerna bootstrap",
		"test": "./node_modules/.bin/mocha --require tsconfig-paths/register --require ts-node/register  \"./packages/**/*.spec.ts\" --watch-extensions ts",
		"test:watch": "npm test -- --watch",
		"precommit": "lint-staged",
		"format": "prettier --write \"**/**/*.ts\""
	},
	"lint-staged": {
		"*.{ts,md}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"singleQuote": true
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@types/chai": "^4.1.4",
		"@types/mocha": "^5.2.4",
		"@types/ramda": "0.25.34",
		"@types/sinon": "5.0.1",
		"chai": "^4.1.2",
		"lerna": "^2.11.0",
		"mocha": "^5.2.0",
		"rimraf": "^2.6.2",
		"ts-node": "^7.0.0",
		"tslint": "5.10.0",
		"typescript": "3.0.0-dev.20180712",
		"sinon": "6.1.3",
		"tsconfig-paths": "3.4.2",
		"prettier": "1.13.7",
		"lint-staged": "7.2.0",
		"husky": "0.14.3",
		"bignumber.js": "6.0.0",
		"web3": "^0.20.6",
		"rxjs": "^6.2.2"
	}
}
