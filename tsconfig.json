{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["es2017"],
    "baseUrl": "./packages",
    "paths": {
      "@eth-proxy/*": ["./*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  }
}
